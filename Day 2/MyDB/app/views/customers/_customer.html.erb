<style>
  /* Container for all customer cards */
  .customer-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 20px;
    padding: 20px;
  }

  /* Customer Card */
  .customer-card {
    background: linear-gradient(135deg, #ffffff, #f3f6fb);
    border-radius: 12px;
    padding: 18px 20px;
    border: 1px solid #e2e8f0;
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    font-family: "Segoe UI", Tahoma, sans-serif;
    position: relative;
    overflow: hidden;
  }

  .customer-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
    border-color: #4f46e5;
  }

  /* Header */
  .customer-header {
    font-size: 18px;
    font-weight: 600;
    color: #4f46e5;
    margin-bottom: 12px;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .customer-header::before {
    content: "ðŸ‘¤";
    font-size: 20px;
  }

  /* Fields */
  .customer-field {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #ffffff;
    padding: 8px 10px;
    border-radius: 6px;
    margin-bottom: 8px;
    border: 1px solid #edf2f7;
  }

  .customer-field strong {
    color: #1f2937;
    font-size: 14px;
    min-width: 70px;
  }

  .customer-field span {
    color: #4b5563;
    font-size: 14px;
    text-align: right;
    word-break: break-all;
  }

  /* Action Buttons (optional) */
  .customer-actions {
    display: flex;
    justify-content: flex-end;
    gap: 10px;
    margin-top: 12px;
  }

  .btn {
    padding: 6px 12px;
    border-radius: 6px;
    border: none;
    cursor: pointer;
    font-size: 13px;
    transition: 0.2s ease;
  }

  .btn-edit {
    background-color: #4f46e5;
    color: #fff;
  }

  .btn-edit:hover {
    background-color: #4338ca;
  }

  .btn-delete {
    background-color: #ef4444;
    color: #fff;
  }

  .btn-delete:hover {
    background-color: #dc2626;
  }
</style>

<div class="customer-container">
  <div id="<%= dom_id customer %>" class="customer-card">
    <div class="customer-header">
      Customer Details
    </div>

    <div class="customer-field">
      <strong>Name</strong>
      <span><%= customer.name %></span>
    </div>

    <div class="customer-field">
      <strong>Email</strong>
      <span><%= customer.email %></span>
    </div>

    <!-- Optional action buttons -->
    <!--
    <div class="customer-actions">
      <button class="btn btn-edit">Edit</button>
      <button class="btn btn-delete">Delete</button>
    </div>
    -->
  </div>
</div>
