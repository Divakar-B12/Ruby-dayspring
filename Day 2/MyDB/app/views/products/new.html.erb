<style>
  body{
    background: linear-gradient(135deg, #667eea, #764ba2);
    font-family: "Segoe UI", sans-serif;
    min-height: 100vh;
  }

  .new-product-container{
    width: 100%;
    max-width: 600px;
    margin: 60px auto;
    padding: 35px;
    border-radius: 20px;
    background: linear-gradient(145deg, #ffffff, #f1f5f9);
    box-shadow:
      12px 12px 25px rgba(0,0,0,0.2),
      -12px -12px 25px rgba(255,255,255,0.8);
    transition: 0.3s;
  }

  .new-product-container:hover{
    transform: translateY(-6px);
    box-shadow:
      16px 16px 30px rgba(0,0,0,0.25),
      -16px -16px 30px rgba(255,255,255,0.9);
  }

  .page-title{
    text-align: center;
    font-size: 30px;
    font-weight: bold;
    color: #1e293b;
    margin-bottom: 25px;
  }

  .back-link{
    text-align: center;
    margin-top: 20px;
  }

  .back-link a{
    text-decoration: none;
    background: #4f46e5;
    color: #ffffff;
    padding: 10px 18px;
    border-radius: 8px;
    font-weight: bold;
    transition: 0.3s;
    box-shadow: 0 6px 14px rgba(0,0,0,0.25);
    display: inline-block;
  }

  .back-link a:hover{
    background: #4338ca;
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 10px 22px rgba(0,0,0,0.35);
  }
</style>




<% content_for :title, "New product" %>

<div class="new-product-container">

  <div class="page-title">New Product</div>

  <%= render "form", product: @product %>

  <div class="back-link">
    <%= link_to "Back to products", products_path %>
  </div>

</div>
